{
  "name": "Laravel PHP Codespace",
  "image": "mcr.microsoft.com/devcontainers/php:8.3",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/composer:1": {
      "version": "2"
    }
  },
  "forwardPorts": [8000],
  "postCreateCommand": "composer install && cp .env.example .env && php artisan key:generate && php artisan migrate --force || true",
  "portsAttributes": {
    "8000": {
      "label": "Laravel App",
      "onAutoForward": "openBrowser"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "amiralizadeh9480.laravel-extra-intellisense",
        "onecentlin.laravel-blade",
        "MehediDracula.php-namespace-resolver"
      ]
    }
  },
  "remoteUser": "vscode"
}
